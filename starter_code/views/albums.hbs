<main class="view-container">
    
    {{#each albumsObject}}
        <div>
            {{#if this.images.0.url}}
            <img 
                        src="{{this.images.0.url}}" 
                        alt="Album-Image">
            {{/if}}

                <p>{{this.name}}</p>

                <a href="/tracks/{{this.id}}">
                    View Tracks
                </a>
        
        </div>
    {{/each}}

</main>